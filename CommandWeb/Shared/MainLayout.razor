@using Radzen
@using Radzen.Blazor
@inherits LayoutComponentBase

<PageTitle>CommandWeb</PageTitle>

<div style="min-height: 100vh; background: #f8fafd; font-family: 'Inter', 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;">
    <header style="padding: 2.5rem 0 1.5rem 0; text-align: center; background: #fff; box-shadow: 0 2px 8px 0 rgba(0,0,0,0.03);">
        <h1 style="font-weight: 700; font-size: 2.5rem; letter-spacing: -1px; margin: 0; color: #1a237e; font-family: 'Inter', 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;">Command Center</h1>
        <div style="color: #607d8b; font-size: 1.15rem; margin-top: 0.5rem; font-weight: 400;">Run, manage, and organize your custom commands</div>
    </header>
    <main style="max-width: 1200px; margin: 0 auto; padding: 2rem 1.5rem 3rem 1.5rem;">
        @Body
    </main>
    <Radzen.Blazor.RadzenDialog />
    <Radzen.Blazor.RadzenNotification />
    <Radzen.Blazor.RadzenTooltip />
    <Radzen.Blazor.RadzenContextMenu />
</div>
